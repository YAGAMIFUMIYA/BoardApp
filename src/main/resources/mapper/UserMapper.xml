<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mybatisboard.mapper.UserMapper">

    <select id="findByUsername" parameterType="string" resultType="com.example.mybatisboard.model.User">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <insert id="insert" parameterType="com.example.mybatisboard.model.User">
        INSERT INTO users (username, password, email, created_at)
        VALUES (#{username}, #{password}, #{email}, CURRENT_TIMESTAMP)
    </insert>
</mapper>