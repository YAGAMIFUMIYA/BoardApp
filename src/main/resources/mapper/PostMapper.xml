<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mybatisboard.mapper.PostMapper">


    <select id="findAll" resultType="com.example.mybatisboard.model.Post">
        SELECT * FROM posts ORDER BY created_at DESC
    </select>

    <select id="findById" parameterType="int" resultType="com.example.mybatisboard.model.Post">
        SELECT * FROM posts WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.example.mybatisboard.model.Post">
        INSERT INTO posts (title, content, author, created_at)
        VALUES (#{title}, #{content}, #{author}, CURRENT_TIMESTAMP)
    </insert>

    <delete id="delete" parameterType="long">
        DELETE FROM posts WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.example.mybatisboard.model.Post">
        UPDATE posts
        SET title = #{title},
            content = #{content},
            author = #{author}
        WHERE id = #{id}
    </update>
</mapper>